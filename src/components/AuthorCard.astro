---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  author: CollectionEntry<"author">;
}

const { author } = Astro.props;
const { name, avatar, twitter, linkedIn, github, bio, subtitle } = author.data;
---

<div class="max-w-lg mx-auto bg-gray-800 rounded-lg shadow-md p-5">
  <Image
    src={avatar}
    alt={name}
    width={200}
    height={200}
    class="w-32 h-32 rounded-full mx-auto"
    loading="eager"
  />
  <h2 class="text-center text-2xl font-semibold mt-3">{name}</h2>
  <p class="text-center mt-1">{subtitle}</p>
  <div class="flex justify-center mt-5">
    <a
      href=`https://x.com/${twitter}`
      target="_blank"
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      Twitter
    </a>
    <a
      href={linkedIn}
      target="_blank"
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      LinkedIn
    </a>
    <a
      href={github}
      target="_blank"
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      GitHub
    </a>
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="mt-2">
      {bio}
    </p>
    <div class="flex justify-end mt-5">
      <a href={`/blog/${author.id}`} class="btn text-blue-600">Leer m√°s</a>
    </div>
  </div>
</div>
